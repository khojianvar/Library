@model IEnumerable<Library.Models.Publication>

@{
    ViewData["Title"] = "Index";
}

<h1>Publication</h1>

<form asp-controller="Publications" asp-action="Index" method="post">
    <div class="d-flex justify-content-between">
        <div class="btn-group" role="group" aria-label="Basic example">
            <div class="form-outline search-input">
                <input type="text" class="form-control input" placeholder="Search by Author"
                        name="SearchString" value="@ViewData["CurrentSearch"]" />
            </div>
            <button type="submit" value="Search" class="btn btn-outline-dark ml-2 mr-2">
                Search<i class="fa fa-search"></i>
            </button>
        </div>
        <p>
            <a class="btn btn-outline-success" asp-action="Create">Create</a>
        </p>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                <a asp-route-sortOrder="@ViewData["PublishedDateSort"]">
                    @Html.DisplayNameFor(model => model.PublishedDate) <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["AuthorSort"]">
                    @Html.DisplayNameFor(model => model.Author) <i class="fa fa-sort"></i>
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["BookSort"]">
                    @Html.DisplayNameFor(model => model.Book) <i class="fa fa-sort"></i>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.PublishedDate)
                    </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
        </tr>
}
    </tbody>
</table>
